<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeamlessBackEndProject.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
            <Label Text="🌦 Seamless Weather"
                   FontSize="28"
                   HorizontalOptions="Center" />

            <Entry x:Name="CityEntry"
                   Placeholder="Enter city name"
                   FontSize="18" />

            <Button Text="Get Weather"
                    Clicked="OnGetWeatherClicked"
                    BackgroundColor="#007AFF"
                    TextColor="White" />

            <Label x:Name="WeatherLabel"
                   FontSize="20"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Text="Weather info will appear here." />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>